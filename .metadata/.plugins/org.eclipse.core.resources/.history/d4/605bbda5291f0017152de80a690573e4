<?php
namespace Admin\Controller;
use Common\Controller\AdminbaseController;
class ExguizeController extends AdminbaseController{
protected $attribute;
	
	function _initialize() {
		parent::_initialize();
		$this->attribute = D("Common/Attribute");
	}
	
	function index(){
		$config=M("exchange_rules")->find(1);

		$this->assign('config',$config);

		$this->display();
	}
	
	
	function set_post(){
		if(IS_POST){
				
			$config=I("post.post");
				
			/* $attribute2=M("attribute")->field("name,type")->where("type='editor' or type='checkbox'")->select();
				foreach( $attribute2 as $vo){
			switch($vo['type']){
			case 'editor':
			$config[$vo['name']]=htmlspecialchars_decode($config[$vo['name']]);
			break;
			case 'checkbox':
			$config[$vo['name']]=implode(",",$config[$vo['name']]);
			break;
			default:
	
			break;
	
			}
	
			} */
	
			if (M("exchange_rules")->where("id='1'")->save($config)!==false) {
				$this->success("保存成功！");
			} else {
				$this->error("保存失败！");
			}
	
		}
	}
}

